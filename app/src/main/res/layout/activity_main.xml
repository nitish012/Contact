<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/im1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:padding="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTACT US"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/im1"
        android:textColor="#000"
        android:layout_marginTop="20dp"/>
    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/im1"
        android:background="#E4DFDF"

        />
    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v1"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/background">
        <ImageView
            android:id="@+id/im2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:layout_margin="16dp"
            android:src="@drawable/ic_contact_email"
           />

    </RelativeLayout>



    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/r1"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textSize="20dp"

                />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="support2@gmail.com"
            android:textSize="20dp"
            android:textColor="#000"
            />

        </LinearLayout>

    <RelativeLayout
        android:id="@+id/r2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/background">
        <ImageView
            android:id="@+id/im3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:layout_margin="16dp"
            android:src="@drawable/ic_contact_phone"
            />

    </RelativeLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/r1"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="CONTACT NO"
            android:textSize="20dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="35534545545"
            android:textSize="20dp"
            android:textColor="#000"
            />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/r3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v1"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/background">
        <ImageView
            android:id="@+id/im4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:layout_margin="16dp"
            android:src="@drawable/ic_contact_website"
            />

    </RelativeLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/r1"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="WEBSITE"
            android:textSize="20dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="www.google.com"
            android:textSize="20dp"
            android:textColor="#000"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/n1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_below="@id/r3"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="35dp"
        android:textSize="20dp"
      />


    <EditText
        android:id="@+id/e1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/n1"
        android:text="Rashed Hussain"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:gravity="top"/>


    <TextView
        android:id="@+id/n2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enquiry type"
        android:layout_below="@id/e1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:textSize="20dp"
        />


    <Spinner
        android:id="@+id/e2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/n2"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:drawSelectorOnTop="true"
        android:entries="@array/account"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:gravity="top">

    </Spinner>

    <TextView
        android:id="@+id/m1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Message"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:textSize="20dp"
        android:layout_below="@id/e2"/>



    <EditText
        android:id="@+id/m2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:background="#dcdcdc"
        android:gravity="top"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:hint="Pricing and Plans Information"

        android:layout_below="@id/m1"


        android:singleLine="false"
        android:lines="4"
        android:maxLines="4"

        android:layout_marginLeft="40dp"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/m2"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button"

        android:text="SEND"
        android:textSize="20dp"/>



</RelativeLayout>

</ScrollView>